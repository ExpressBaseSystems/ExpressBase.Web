@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    Html.RenderPartial("ExtPageHeader2");
}
<div class="col-md-4 col-md-offset-4">
    <h3 class="text-center">Create Application</h3>
    <div class="form-group">
        <input type="text" class="form-control" name="" placeholder="Application Name" />
    </div>
    <div class="form-group">
        <textarea name="desc" placeholder="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <div id="obj" class="input-group">
            <select class="selectpicker" data-live-search="true" id="roles" multiple data-selected-text-format="count>3">
                <option value="ME">Select Role</option>
                <option value="MD">Maryland</option>
                <option value="MA">Massachusetts</option>
                <option value="MI">chigan</option>
                <option value="MN">Minnesota</option>
                <option value="MS">Mississippi</option>
                <option value="MO">souri</option>
            </select>
        </div>
    </div>
    <div class="form-group pull-right">
        <input type="submit" class="btn btn-primary" id="sub" value="Create" />
    </div>
</div>
<script>
    $('document').ready(function () {
        var f = true;
        $('.selectpicker').on('rendered.bs.select', function (e) {
            if (f)
                $("#obj").find("span:eq(0)").text("Select Objects")
            f = false;
        });
    });
</script>
