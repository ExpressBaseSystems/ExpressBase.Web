@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    Html.RenderPartial("_PageheaderDev");
}
<script src="~/js/splitWindow.js" type="text/javascript"></script>
<style>
    #parent-div {
        background-color: #2b95a8;
        width: 100%;
        height: 612px;
        margin-top: 50px;
        
    }
   
    .sub-windows-head {
        height: 30px;
        background-color: #489097;
        width: 100%;
    }

    .sub-windows {
        height: inherit;
        width: 582px;
        background-color: white;
        float: none;
        border: 1px solid #808080;
        display: inline-block;
    }

    .head-btn {
        border: none;
        background-color: #489097;
        color: white;
    }

    .fd {
        background-color: white;
        height: 582px;
        border-right: 1px solid;
    }

    .no-padd {
        padding: 0;
    }

    .toolbar-com {
        width: 100%;
        height: 30px;
        background-color: #fafafa;
    }

    .btn-tb-com {
        border: none;
        background-color: white;
    }

    .cont-wnd {
        overflow-x: scroll;
        white-space: nowrap;
        height: 582px;
        overflow-y:hidden;
    }
    .pg {
        background-color: white;
        height: 582px;
        border-left: 1px solid;
        z-index: 1000;
    }
    .min-btn {
        width: 100%;
        height: 30px;
        border-bottom: 1px solid #e7e7e7;
    }
    .toggled{
        margin-left:-230px;
        z-index:100;
    }
    .pg-toggled {
        margin-right: -230px;
        z-index: 100;
    }
    .sub-w {
        width: 100%;
        height: 582px;
        background-color: #2b95a8;
        display: inline-block;
    } 
    .rotated {
        -webkit-transform: rotate(180deg); /* Chrome, Safari 3.1+ */
        -moz-transform: rotate(180deg); /* Firefox 3.5-15 */
        -ms-transform: rotate(180deg); /* IE 9 */
        -o-transform: rotate(180deg); /* Opera 10.50-12.00 */
        transform: rotate(180deg); /* Firefox 16+, IE 10+, Opera 12.10+ */
    }  
</style>
<div class="container-fluid" id="parent-div">
    @{      
        Html.RenderPartial("_PageheaderDev");
    }
    <div class="row">
        <div class="toolbar-com"><button class="btn" id="new"><i class="fa fa-plus" aria-hidden="true"></i></button> </div>
    </div>
    <div class="row">
        <div class="col-md-2 no-padd fd" id="side-div" style="display:block">
            <div class="min-btn">
                <button class="btn-tb-com pull-right" id="min"><i class="fa fa-caret-left fa-lg" aria-hidden="true"></i></button>
            </div>            
        </div>
        <div class="col-md-8 no-padd cont-wnd" id="main-box">
            <div class="sub-w" id="sub-w">
                    
                </div>
        </div>
        <div class="col-md-2 pg no-padd pull-right" id="p-grid">
            <div class="min-btn">
                <button class="btn-tb-com" id="pg-min"><i class="fa fa-caret-right fa-lg" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var i = 1;
        var wd = 0;      
        $("#min").click(function (e) {
            e.preventDefault();
            $('#side-div').toggleClass("toggled");
            if ($('#side-div').hasClass("toggled")) {               
                $('div[id^="main-box"]').removeClass('col-md-8').addClass('col-md-10');
                $('#min').css('margin-right', '-25px').addClass("rotated");
            }
            else {
                $('div[id^="main-box"]').removeClass('col-md-10').addClass('col-md-8');
                $('#min').css('margin-right', '0').removeClass("rotated");
            }
        });
        $("#pg-min").click(function (e) {
            e.preventDefault();
            $('#p-grid').toggleClass("pg-toggled");
            if ($('#p-grid').hasClass("pg-toggled")) {
                $('div[id^="main-box"]').removeClass('col-md-8').addClass('col-md-10');
                $('#pg-min').css('margin-left', '-25px').addClass("rotated");
            }
            else {
                $('div[id^="main-box"]').removeClass('col-md-10').addClass('col-md-8');
                $('#pg-min').css('margin-left', '0').removeClass("rotated");
            }
        });
        $('#new').click(function () {
            $('#main-box').prepend("<div class='sub-windows' id='sub" + i++ + "'><div class='sub-windows-head'><div class='pull-right' style='margin-top: 3px;'><button class='head-btn'><i class='fa fa-minus' aria-hidden='true'></i></button><button class='head-btn'><i class='fa fa-thumb-tack' aria-hidden='true'></i></button><button class='head-btn'><i class='fa fa-times' aria-hidden='true'></i></button></div></div></div>");                   
            $('#main-box').scrollLeft(wd);
            wd = wd + 565;
        });       
    });

</script>
