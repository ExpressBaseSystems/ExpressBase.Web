    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<script>
    $("#signIn").hide();
    $("#signUpFree").hide();
</script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.5.1/croppie.min.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.5.1/croppie.min.js"></script>
<script src="~/js/Eb_ProfImageUpload.js" type="text/javascript"></script>

<style>
    .mt-89 {
        margin-top: 89px;
    }

    .pd-0 {
        padding: 0;
    }

    .profImageSec {
        background: #6da49f;
        height: calc(100vh - 89px);
        padding: 30px;
    }

    .profSetupSec {
        height: calc(100vh - 89px);
        background: #eeeeee;
    }

    .prof-picDiv {
        width: 100%;
        background: white;
        height: 150px;
    }

    .profDetailHead {
        color: white;
        font-size: 22px;
        padding-left: 20px;
    }

    .profImagePrevSec {
        background: #eeeeee;
        height: calc(100vh - 89px);
    }

    .previewsec-outer {
        width: 100%;
        height: inherit;
        background: white;
        padding: 35px 10px 10px 20px;      
    }
        .previewsec-outer .cropsection {
            width: 100%;
            height: 300px;
        }                
    .submitsec .btn {
        float: right;
    }

    .Eb-CommonMenuStyle {
        height: 32px;
        border: none;
    }

        .Eb-CommonMenuStyle .btn {
            border: none;
        }
    .croppie-container .cr-slider-wrap {
        width: 100%;
        padding: 5px;
        background-color: black;
        margin: 0;
        text-align: left;        
    }
    .cr-slider {             
        max-width: 100%;
        padding-top: 0;
        padding-bottom: 3px;
        background:white;
    }
    .cr-slider-wrap .btn {
        display: inline;
        margin-left: 5px;
        color: #fff;
        background-color: transparent;
        border-color:none;
    }
    .cr-slider-wrap input[type=range] {
        width: 99px;
        display: inline;
    }    
</style>
@*@{
        var img = (ViewBag.ImgSrc != null) ? ViewBag.ImgSrc : "../../images/proimg.jpg";
    }*@
<div class="row">
    <div class="Eb-CommonMenuStyle">
        <div class="col-md-3 profDetailHead">Personal info</div>
        <div class="pull-right">
            <input type="button" class="btn btn-primary" id="save" value="Save">
            <input type="button" class="btn btn-primary" value="Skip" style="margin-right:10px;">
        </div>
    </div>
    <div class="container-fluid pd-0">
        <div class="col-md-2 profImageSec">
            <div class="prof-picDiv" id="profimage">

            </div>
        </div>
        <div class="col-md-6 profSetupSec">
            <div class="form-horizontal" style="margin-top:35px">
                <div class="form-group">
                    <label for="name" class="col-md-2">Name:</label>
                    <div class="col-md-8 pd-0">
                        <input class="form-control" type="text" name="Name" id="name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone" class="col-md-2">Phone:</label>
                    <div class="col-md-8 pd-0">
                        <input class="form-control" type="text" name="Phone" id="phone">
                    </div>
                </div>
                <div class="form-group">
                    <label for="company" class="col-md-2">Company:</label>
                    <div class="col-md-8 pd-0">
                        <input class="form-control" type="text" name="Company" id="company">
                    </div>
                </div>
                <div class="form-group">
                    <label for="designation" class="col-md-2">Designation:</label>
                    <div class="col-md-8 pd-0">
                        <input class="form-control" type="text" name="Designation" id="designation">
                    </div>
                </div>
                <div class="form-group">
                    <div class="ui-select">
                        <label for="employees" class="col-md-2">Employees:</label>
                        <div class="col-md-8 pd-0">
                            <select id="employees" name="Employees" class="form-control">
                                <option value="0">Employees</option>
                                <option value="1-10">1-10</option>
                                <option value="11-50">11-50</option>
                                <option value="51-100">51-100</option>
                                <option value="101-250">101-250</option>
                                <option value="251-500">250-500</option>
                                <option value="greater than 500">greater than 500</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="upload" class="col-md-2">Image:</label>
                    <div class="col-md-8 pd-0">
                        <input type="file" id="dp-upload"  style="display:none" />
                        <button class="btn btn-success" onclick="$('#dp-upload').click();" style="width:100%">Browse</button>
                    </div>
                </div>                
                <input type="hidden" id="imgsrc" name="imgsrc" />
                <div class="Img-upload-modal" id="promodal-container"></div>
            </div>
        </div>
        <div class="col-md-4 pd-0 profImagePrevSec">
            <div class="previewsec-outer" id="previewsec-outer" style="display:none;">
                <div class="cropsection" id="cropsection">

                </div>                
            </div>
        </div>
    </div>
</div>
<script>
    $('#dp-upload').change(function () {
        var upload = new ProfImageUploader({
            url: this,
            cropperContainer: 'cropsection'
        });
    });
    
