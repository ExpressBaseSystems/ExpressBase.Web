@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<body>
    @using (Html.BeginForm(FormMethod.Post, new { enctype = "application/x-www-form-urlencoded", id = "signup_form" }))
    {
        <div align="center" style="margin-left:150px;margin-top:100px;height:400px">
            <table>
                <tr>
                    <td>
                        <div class="tdd">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                <input class="form-control" type="text" id="account" name="account" placeholder="Account Name" />
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="tdd">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <input class="form-control" type="text" id="iuser" name="iuser" placeholder="Enter Email">
                            </div>
                        
                            <a class="btn btn-primary">
                                <i class="fa fa-paper-plane"></i> Send
                            </a>
                        </div>
                    </td>
                    <td><span id="result"></span></td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <a class="btn btn-primary" href="javascript: signup();">
                                <i class="fa fa-sign-in fa-lg"></i> Add Account
                            </a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <style>
            .tdd {
                margin: 10px;
            }

            input[type="text"] {
                display: block;
                margin: 0;
                width: 102%;
                font-family: sans-serif;
                font-size: 18px;
                box-shadow: none;
                border-radius: none;
            }

                input[type="text"]:focus {
                    outline: none;
                }

            input[type="password"] {
                display: block;
                margin: 0;
                width: 102%;
                font-family: sans-serif;
                font-size: 18px;
                box-shadow: none;
                border-radius: none;
            }

            input[type="text"]:focus {
                outline: none;
            }

            input[type="submit"] {
                background-color: #4C50AF; /* blue */
                border: none;
                color: white;
                padding: 8px 42px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

                input[type="submit"]:hover {
                    background-color: #337; /* blue */
                }
            /*body {
                    background-image: url("http://localhost:53125/images/bgm1.jpg");
                    background-color: #cccccc;
                  }*/
        </style>
    }
</body>