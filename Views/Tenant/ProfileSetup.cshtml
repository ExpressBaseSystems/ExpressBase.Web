<div class="container">
    <div class="row">
        @*<form class="form-horizontal" role="form" method="post">*@

            <!-- edit form column -->
            <div class="col-md-12 personal-info">
                <div class="alert alert-danger alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">×</a>
                    <i class="fa fa-thumbs-up fa-2x"></i>
                    Thanks for signing up for ExpressBase Systems! Now edit your Profile.
                </div>
            </div>

            <div class="col-md-4 col-md-offset-4 bg-white">
                <h3 class="text-center">Personal info</h3>
                <hr>
                <div class="form-group">
                    <input class="form-control" type="text" name="Name" id="name" placeholder="Name">
                </div>
               
                <div class="form-group">
                    <input class="form-control" type="text" name="Phone" id="phone" placeholder="Phone">
                 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="Company" id="company" placeholder="Company">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="Designation" id="designation" placeholder="Designation">
                </div>
                <div class="form-group">
                    <div class="ui-select">
                        <select id="employees" name="Employees" class="form-control">
                            <option value="0">Employees</option>
                            <option value="1-10">1-10</option>
                            <option value="11-50">11-50</option>
                            <option value="51-100">51-100</option>
                            <option value="101-250">101-250</option>
                            <option value="251-500">250-500</option>
                            <option value="greater than 500">greater than 500</option>
                        </select>
                    </div>
                </div>              
                <div class="form-group">
                    <button class="btn" data-target="#up-modal" data-toggle="modal">upload</button>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <input type="button" class="btn btn-primary" id="save" value="Save">
                    </div>
                    <div class="col-md-3">
                        <input type="button" class="btn btn-primary" value="Skip">
                    </div>
                </div>
                <input type="hidden" id="imgsrc" name="imgsrc" />
                <div class="Img-upload-modal" id="promodal-container"></div>
            </div>
        @*</form>*@
    </div>
</div>
<hr>
<script>
    $(document).ready(function () {
        
        var uploader = imageUploader("promodal-container"); 

        $('#save').click(function () { 
            $.post("../Tenant/ProfileSetup",
                {
                    "Name": $('#name').val(),
                    "Phone": $('#phone').val(),
                    "Company": $('#company').val(),
                    "Designation": $('#designation').val(),
                    "Employees": $("#employees option:selected").text(),
                    "Imgsrc": $('#imgsrc').val(),

                }, function (result) {
                });
        });
    });
</script>
