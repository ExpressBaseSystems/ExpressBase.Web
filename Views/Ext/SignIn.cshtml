                                <label class="custom-control-label" for="developer">Developer</label>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 ">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input radio_cstm txthighlight" id="business" value="business" name="account_typ">
                                <label class="custom-control-label" for="business">Business</label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="eb_required_group required col-sm-12 col-md-12 col-lg-12  ">
                <div class="col-md-6 col-lg-6" style=" padding-left: 0px;">
                    <label>Password</label>
                    <div class="icon_input">
                        <input class="form-control  input-lg sinpt txthighlight" data-minlength="8" type="password" name="Password" id="inputPassword">
                        <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
                        <span toggle="#inputPassword" style=" padding-right: 30px;" id="psvisible" class="fa fa-fw fa-eye fa-eye-slash  fa-lg fa-fw field-icon toggle-password "></span>
                        <span toggle="#inputPassword" style="padding-right: 30px;" hidden id="pshide" class="fa fa-fw fa-eye  fa-lg fa-fw field-icon toggle-password "></span>
