                        <option>Rating</option>
                        <option>Text</option>
                    </select>
                    <div id="question-type">

                    </div>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Save</button>
            </div>
        </div>
    </div>
</div>

