                                var sel = $('#sheetNo');
                                $('#sheetNo').find('option').remove();
                                $('#sheetNo').append(`<option value='sel'>--Select--</option>`);
                                for (var i = 0; i < x.length - 1; i++) {

                                    if (x[i] != this_sheet) {
                                        $('#sheetNo').append(`<option value='${x[i]}'>${x[i]}</option>`);
                                    }


                                }
                                count--;
                            }
                            else {

                                window.location.reload();
                            }

                        }
                        else {
                            var path = $("#path").val();
                            $.ajax({
                                type: "POST",
                                url: "/ExcelUpload/DeleteFile",
