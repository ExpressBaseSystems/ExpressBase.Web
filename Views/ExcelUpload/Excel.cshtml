                    {
                        ary[i] = { "colName": $(col).val(), "dataType": $(type).val() };
                        flag = 0;
                    }

                }
                if (flag == 0)
                {
                    $.ajax({
                    type: "POST",
                    url: "/ExcelUpload/CreateTable",
                    data: { "selected_opt": sheet, "file_path": path, "tblName": tbl, "colcust": JSON.stringify({ "abc": ary }) },

                    success: function (result) {

                        var count = $('#sheetcount').val();
