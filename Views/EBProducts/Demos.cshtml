@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/css/Ebproducts.css" />
<div class="container-fluid pd-0">
    <div class="Eb-bot-header">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"><img alt="Brand" src="~/images/EB_Logo.png"></a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav navbar-right">   
                        <li><a href="" class="hvr-underline-from-center">Home</a></li>
                        <li><a href="#" class="hvr-underline-from-center" data-toggle="modal" data-target="#login-modal">Sign In</a></li>
                        <li class="btn-trial" id="trial-btn" style="display:none;"><a href="#">Try for FREE</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</div>
<section class="slider">
    <div class="container-fluid">
        <div class="row eb-banner">
            <div class="col-md-12 no-padd eb-banner-text-img-sec">
                <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12 bg-color-banner">
                    <h2>Fast growing Small & Midsize Businesses <br />deserve rapidly evolving software.</h2>
                    <p>
                        The only RAD Platform on the cloud (or hpaPaaS) specially designed for SMBs.<br />
                        Build Complex business Apps 10x faster, with drag n drop &amp; low-code.
                        Efficiently manage change in business processes with versioning & branching of objects - from a simple SQL statement to a complex Form.
                    </p>
                </div>
                <div class="col-md-3 col-lg-3 col-sm-3 col-xs-12 hidden-xs banner-img pull-right">
                    <img src="~/images/svg/cloud2.svg" />
                </div>
            </div>
            <div class="col-md-12 no-padd get-start-sec">
                <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12 col-md-offset-4 col-lg-offset-4 col-sm-offset-4">
                    <div class="no-creditcared">No credit card required.</div>

                    <form id="signup_form" action="~/Ext/TenantExtSignup" method="post">
                        <div class="input-group">
                            <input type="email" name="email" class="form-control" placeholder="Enter your email">
                            <span class="btn input-group-addon" id="btnGroupAddon">Get Started</span>
                        </div>
                    </form>
                    <div class="form-group social-btn-sec">
                        <a style="color: #cad4d3;font-size: 12px;">Or Sign In with</a>
                        <div class="form-inline">
                            <a class="btn socialbtns" href="@ViewBag.ServiceUrl/auth/facebook">
                                <i class="fa fa-facebook fa-lg"></i>
                            </a>
                            <a class="btn socialbtns" href="@ViewBag.ServiceUrl/auth/twitter">
                                <i class="fa fa-twitter fa-lg"></i>
                            </a>
                            <a class="btn socialbtns" href="#">
                                <i class="fa fa-linkedin fa-lg"></i>
                            </a>
                            <a class="btn socialbtns" href="@ViewBag.ServiceUrl/auth/googleoauth">
                                <i class="fa fa-google-plus fa-lg"></i>
                            </a>
                            <a class="btn socialbtns" href="@ViewBag.ServiceUrl/auth/github">
                                <i class="fa fa-github fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
