<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <form class="loginmodal-container" action="~/Ext/TenantSignin" method="post" data-toggle="validator">
            <div class="login-sec-image">
                <img src="~/images/EB_Logo-png.png" />
            </div>
            <h1 class="text-center">Sign In</h1><br>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    <input type="email" name="uname" class="form-control" placeholder="Email" id="inputEmail" data-error="field required or email address is invalid" required><br />
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                    <input type="password" id="pass" name="pass" class="form-control" placeholder="Password" required>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox" id="loginrem"> Remember Me
                    </label>
                    <div class="text-right nopadding">
                        <a href="#">Forgot password?</a>
                    </div>
                </div>
                <button type="submit" id="bot-signUP" class="btn signin-btn">
                    Sign In
                </button>
            </div>
            <div class="text-center">Or Sign In by</div>
            <div style="padding-left: 34px;">
                <div class="col-xs-2 col-sm-2">
                    <a href="@ViewBag.ServiceUrl/auth/facebook" class="btn btn-lg btn-block">
                        <i class="fa fa-facebook"></i>
                        <span class="hidden-xs"></span>
                    </a>
                </div>
                <div class="col-xs-2 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block">
                        <i class="fa fa-twitter text-info"></i>
                        <span class="hidden-xs"></span>
                    </a>
                </div>
                <div class="col-xs-2 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block">
                        <i class="fa fa-google-plus text-danger"></i>
                        <span class="hidden-xs"></span>
                    </a>
                </div>
                <div class="col-xs-2 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block">
                        <i class="fa fa-linkedin"></i>
                        <span class="hidden-xs"></span>
                    </a>
                </div>
                <div class="col-xs-2 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block">
                        <i class="fa fa-github text-muted"></i>
                        <span class="hidden-xs"></span>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>