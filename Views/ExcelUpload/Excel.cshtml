                        {
                            $('#panel5').find('.panel-body').slideUp();
                            $('#span5').hide();
                            $('#panel7').show();
                            $('#panel7').find('#span2').show();
                            $('#panel7').find('.panel-body').slideDown();

                            $(result[0]).insertBefore("#tblbtn1");
                            $("#colcount").val(result[1]);
                            $("#tblcreate").css('visibility', 'visible');

                            $('#col_cust').DataTable({
                                "scrollY": 200,
                                "scrollX": true
                            });
                        }
