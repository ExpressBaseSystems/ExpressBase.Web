                                    <div class="inp-block">
                                        <label>Bot Name:</label>
                                        <input type="text" name="_fullname" value="" class="inp-control" required id="botname" placeholder="Enter a name for your bot">
                                    </div>
                                    <div class="inp-block">
                                        <label>Short Name:</label>
                                        <input type="text" name="_name" value="" class="inp-control" required id="shortname" placeholder="Enter a short name for your bot">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
