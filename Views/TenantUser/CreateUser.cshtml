@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col-md-4 col-md-offset-4 bg-white">
    <h3 class="text-center">Create User</h3>
    <div class="form-group">
        <input type="text" class="form-control" name="" placeholder="Name" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="" placeholder="Email" />
    </div>
    <div class="form-group pull-right">
        <div class="input-group">
            <span>Send mail. </span><input type="checkbox" id="sendmail" />
        </div>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="pw" name="" placeholder="Password" />
    </div>
    <div class="form-group">
        <div class="ui-select">
            <select id="#" name="" class="form-control">
                <option value="0">Select Role</option>
            </select>
        </div>
    </div>
    <div class="form-group pull-right">
        <input type="submit" class="btn btn-primary" value="Create" />
    </div>
</div>
<script>
    $('document').ready(function () {
        $('#sendmail').change(function () {
            if (this.checked)
                $('#pw').fadeIn();
            else
                $('#pw').fadeOut();

        });
    });
</script>