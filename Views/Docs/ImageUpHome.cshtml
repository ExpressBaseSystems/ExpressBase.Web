@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.2/croppie.min.css" />
<link href="~/css/Docs.css" rel="stylesheet" />

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.2/croppie.min.js"></script>
<script src="~/js/EbCropper.js" type="text/javascript"></script>
<script src="~/js/Docs/ImageUp.js" type="text/javascript"></script>
<div class="row menubar_horri">
    <a class="btn btn_upload pull-right toggle_btn_docs" whichCont="image_down_cont_outer"><i class="fa fa-home"></i></a>
    <a class="btn btn_upload pull-right upload_btn_docs" whichCont="image_up_container_outer">Upload</a>
</div>
<div class="row">
    <div class="col-md-2 nopadding">
        <div class="menu_bar_vert">

        </div>
    </div>
    <div class="col-md-10">
        <div class="image_down_cont_outer" id="image_down_cont_outer">
            <h4>Uploads</h4>
            <div class="image_down_cont_body" id="image_down_cont_body">
               
            </div>
        </div>        
    </div>
</div>
<div class="upload_sec" style="display:none;">
    <div class="image_up_container_outer" id="image_up_container_outer">
        <div class="image_up_container_outer_header">
            <button class="btn pull-right" onclick="$('.upload_sec').toggle();" style="color:white;background-color:transparent"><i class="fa fa-close"></i></button>
        </div>
        <div class="image_up_container_outer_body">
            <div class="col-md-9" style="padding:30px;height:100%;">
                <input id="image_up_input" type='file' data-preview-file-type='text' />
            </div>
            <div class="col-md-3 tag_wrapper">

            </div>
        </div>
    </div>
</div>
<div class="modal fade tag_modal_wrapper" id="TagModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="margin-top:12%">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Tags</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -25px;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input class="form-control" id="tagsinput_input" value="remove this tag"/>
            </div>
            <div class="modal-footer">                
                <button type="button" class="btn btn-primary" id="save_tag">Save</button>
            </div>
        </div>
    </div>
</div>
<script>
    var im = new ImageUploader_Doc({Tenantid:'@ViewBag.cid'});
</script>
