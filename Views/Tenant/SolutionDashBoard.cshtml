                                <label>Database</label>
                                <select name="DatabaseVendor" class="form-control">
                                    <option value="PGSQL">PGSQL</option>
                                    <option value="MYSQL">MYSQL</option>
                                    <option value="MSSQL">MSSQL</option>
                                    <option value="ORACLE">ORACLE</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>DataBase Name</label>
                                <input name="DatabaseName" type="text" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Nick Name</label>
                                <input name="NickName" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-8">
                            <label>User Name</label>
                            <div class="col-md-12 pd-0">
                                <table class="table table-bordered table-form">
                                    <thead>
                                        <tr>
                                            <th style="width:130px;"></th>
                                            <th>User Name</th>
                                            <th>Password</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Admin</td>
                                            <td><input name="UserName" type="text" class="form-control" required /></td>
                                            <td><input name="Password" type="text" class="form-control" required /></td>
                                        </tr>
                                        <tr class="advanced-tr" style="display:none">
                                            <td>Read-Write User</td>
                                            <td><input name="ReadWriteUserName" type="text" class="form-control" /></td>
                                            <td><input name="ReadWritePassword" type="text" class="form-control" /></td>
                                        </tr>
                                        <tr class="advanced-tr" style="display:none">
                                            <td>ReadOnly User</td>
                                            <td><input name="ReadOnlyUserName" type="text" class="form-control" /></td>
                                            <td><input name="ReadOnlyPassword" type="text" class="form-control" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="uname-advanced-sec form-inline">
                                    <label style="margin-right:5px;">Advanced</label>
                                    <label class="switch">
                                        <input type="checkbox" id="UserNamesAdvanced">
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Server Address</label>
                                <input name="Server" type="text" pattern="^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$" class="form-control" required />
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Port</label>
                                <input name="Port" pattern="^[0-9]*$" type="text" class="form-control" required />
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>TimeOut</label>
                                <input name="Timeout" pattern="^[0-9]*$" type="text" class="form-control" required />
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <input type="hidden" name="IsNew" />
                        <input type="hidden" name="SolutionId" value="@ViewBag.SolutionInfo.EsolutionId" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary saveConnection" style="display:none">Save</button>
                    <a whichform="dbConnectionSubmit" url="DataDbTest" class="ebbtn eb_btnblue testConnection">Test Connection</a>
                </div>
            </form>
        </div>
    </div>
</div>
