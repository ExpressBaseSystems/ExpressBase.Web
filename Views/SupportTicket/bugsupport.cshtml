<div class="row s-dash-container h-100">

    <div class="s-dash-workplace tenant_workpane">
        <div class="col-md-12 col-lg-12 col-sm-12 s-dash-solution-desc">
            <div class="col-md-7 col-lg-7 col-xs-12 col-sm-6 pd-0">
                <h4 class="mr-t-0 mr-b-0">My Tickets </h4>
            </div>
            <div class="col-md-5 col-lg-5 col-sm-6 col-xs-12 pd-0 s-dash-btnwraper">
                @*<button id="newticket" class="ebbtn eb_btnblue eb_btn-sm " data-toggle="modal" data-target="#ticketModal">+ Add new</button>*@
                <button id="newticket" class="ebbtn eb_btnblue eb_btn-sm ">+ Add new</button>
            </div>
        </div>
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 pd-0 s-dash-workplace-tabs">
            <div class="tdash-box-body">
                <div class="supporttkt w-100">
                    <div class="w-100 supporttktwrp">
                        <div>
                            <table class="table table-striped table-hover scrl">
                                <thead class=" ">
                                    <tr>
                                        <th>Ticket Id</th>
                                        <th>Title</th>
                                        <th>Solution Id</th>
                                        <th>Priorty</th>
                                        <th>Last Modified At</th>
                                        <th>Status</th>
                                        <th>Assigned to</th>
                                        @*<th>Edit/Delete</th>*@
                                    </tr>
                                </thead>
                                <tbody id="bugtblbody">

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>





<div class="modal fade supporttkt supporttktmodal" id="ticketModal" tabindex="-1" role="dialog">
    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fw500">Add Ticket</h4>
                <button type="button" class="close mdlclose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @*<div class="m-bott10">
                    <span class="fw500">Bug Report</span>
                    <label class="switch">
                        <input type="checkbox" id="check1">
                        <span class="slider round"></span>
                    </label>
                    <span class="fw500">Feature Request</span>
                </div>*@
                <div id="addbug" class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6 ">
                        <div class="">
                            <label>Type</label>
                            <div>
                                <label class="radio-inline">
                                    <input type="radio" name="optradio" value="Bug" checked>Bug
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="optradio" value="FeatureRequest">Feature Request
                                </label>
                            </div>
                            <div id="typelbl" class="" style=" visibility :hidden">Select a value</div>
                        </div>

                        <label>Title</label>
                        <div class=" ">
                            <input class="form-control w-100 " type="text" id="bugtitle">
                        </div>
                        <div id="titlelbl" class="" style=" visibility :hidden;color:red"> Enter a title</div>

                        <div class="">
                            <label>Priority</label>
                            <div>
                                <select id="bugpriority" class="form-control   w-100">
                                    <option value="1">High</option>
                                    <option value="2">Mid</option>
                                    <option value="3">Low</option>
                                </select>
                            </div>
                            <div id="prioritylbl" class="" style=" visibility :hidden">Select a value</div>
                        </div>

                        @{if (ViewBag.wc.Equals("tc"))
                            {
                                <div class="">
                                    <label>Solution id</label>
                                    <div>
                                        <select id="soluid" class="form-control w-100">
                                            @for (int i = 0; i < ViewBag.soluids.Count; i++)
                                            {
                                                <option solu="@ViewBag.isolu[i]" value=@i +1>@ViewBag.soluids[i] (@ViewBag.solunames[i])</option>
                                            }

                                        </select>
                                    </div>
                                    <div id="sollbl" class="" style=" visibility :hidden">Select an Id</div>
                                </div>
                            }

                        }
                        @{ if (ViewBag.wc.Equals("uc") || ViewBag.wc.Equals("dc"))
                            {
                                <div class="">
                                    <label>Solution id</label>
                                    <div>
                                        <input class="form-control w-100 " type="text" value="@ViewBag.Cid" id="soluid" disabled>
                                    </div>
                                    <div id="sollbl" class="" style=" visibility :hidden">Select an Id</div>
                                </div>
                            }

                        }
                        <div>

                        </div>


                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <label>Description</label>
                        <div>
                            <textarea rows="12" cols="60" class="form-control stprsiz " id="descriptionid"></textarea>
                        </div>
                        <div id="descrlbl" class="" style=" visibility :hidden;color:red"> Enter some description</div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="input-field">
                            <label class="active">Files</label>
                            <div class="input-images-2" style="padding-top: .5rem; max-height:200px;overflow-y:auto;"></div>
                        </div>
                    </div>
                    
                </div>
                @* <button id="btnUploadImg" type="button" value="Upload Image"> Upload Image</button>*@

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="savebugid">Save Tickets</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


