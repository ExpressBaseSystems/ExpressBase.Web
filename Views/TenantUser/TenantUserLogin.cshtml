
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<head>
    <script>
    function onSubmit(token) {
        document.getElementById("log_form").submit();
    }
    </script>
</head>

@using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data", id = "TUlog_form" }))
{
    <body>
        @*<div style="margin-left:-10%">
                <br><img width="500" height="100" style="display:inline-block;margin-left:36%;" src="~/images/EB_Logo11.png" />
            </div>*@
        <div align="center" style="margin-right:375px;margin-left:-130px;margin-top:15px;height:400px">
            <fieldset>
                <h3 style="display:inline-block;font-weight:300;color:blue;  margin-left:auto;">LOGIN</h3>
                <div style="color:red;height:15px">

                </div>
                <table style="margin-top:6%;">
                    <tr>
                        <td>
                            <div class="tdd">
                                <div class="input-group margin-bottom-sm">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                    @{
                                        string uname = ViewBag.cookie;
                                        <input class="form-control" type="text" id="uname" name="uname" value="@uname" placeholder="Email address" required>

                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="tdd">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    <input class="form-control" type="password" id="pass" name="pass" placeholder="Password" required>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="tdd">
                                <div class="editor-label">Remember me?<input type="checkbox" id="remember" name="remember" /></div>
                                <div class="input-group">

                                    <button class="btn btn-lg btn-primary btn-block g-recaptcha" data-sitekey="6LcCuhgUAAAAAM5gd62nY4-433v1-JUyv_U01-rP" data-callback='onSubmit' type="submit"><i class="fa fa-sign-in fa-fw"></i>Login</button>

                                </div>
                                    <div><a href="EmailConfirmation">Forgot Password?</a></div>
                            </div>
                        </td>
                    </tr>
                </table>
                <input type="hidden" name="cid" value="@ViewBag.cid" />
            </fieldset>

            <br><br><br><br>

        </div>
    </body> }
<style>
    .tdd {
        margin: 10px;
    }

    input[type="text"] {
        display: block;
        margin: 0;
        width: 102%;
        font-family: sans-serif;
        font-size: 18px;
        box-shadow: none;
        border-radius: none;
    }

        input[type="text"]:focus {
            outline: none;
        }

    input[type="password"] {
        display: block;
        margin: 0;
        width: 102%;
        font-family: sans-serif;
        font-size: 18px;
        box-shadow: none;
        border-radius: none;
    }

    input[type="text"]:focus {
        outline: none;
    }

    input[type="submit"] {
        background-color: #4C50AF; /* blue */
        border: none;
        color: white;
        padding: 8px 42px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

        input[type="submit"]:hover {
            background-color: #337; /* blue */
        }

