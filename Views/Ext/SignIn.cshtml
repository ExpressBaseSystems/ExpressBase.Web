        <div class="center_rightpart" id="userdetails">


            <div class="eb_required_group required col-sm-12 col-md-12 col-lg-12">
                <label>Email</label>
                <div class="icon_input">
                    <input class="form-control  input-lg sinpt txthighlight" type="text" name="Email" id="email" placeholder="">
