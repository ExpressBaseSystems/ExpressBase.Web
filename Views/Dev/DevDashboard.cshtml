        </div>
    </div>
</div>
<script>
     if ('@ViewBag.Msg') {
        EbMessage("show", { Message: "@ViewBag.Msg", AutoHide: true });
    }
    $(document).ready(function () {
        $(".mobcount").text('(@mobcount)');
        $(".webcount").text("(@webcount)");
        $(".botcount").text("(@botcount)");
    });
</script>
