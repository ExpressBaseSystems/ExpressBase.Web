                                    <i class="fa fa-github text-muted"></i>
                                    <span class="hidden-xs"></span>
                                </a>
                            </div>
                        </div>*@
                </form>
            </div>
        </div>
    </div>
</section>

@section JsCode{
    <script>
        if ('@ViewBag.ErrorMsg')
            EbMessage("show", { Message: "@ViewBag.ErrorMsg", Background: "#d83535" });
        if ('@ViewBag.UniqTest')
            EbMessage("show", { Message: "@ViewBag.UniqTest", Background: "#d83535" });
        if ('@ViewBag.mailmsg')
            EbMessage("show", { Message: "@ViewBag.mailmsg" });
    </script>
}
