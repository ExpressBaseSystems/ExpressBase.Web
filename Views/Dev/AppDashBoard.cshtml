@using ExpressBase.Objects.ServiceStack_Artifacts
@using ExpressBase.Common
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@await Component.InvokeAsync("PageHeaderCommon")
<script>
    var cm = new MenuBarCommon().setName("Application DashBoard");
</script>
<link rel="stylesheet" href="~/css/EbOnBoarding/EbOnBoarding.css" />
<script src="~/js/validator.js" type="text/javascript"></script>
<script src="~/js/EbDashBoards/AppDashWeb.js" type="text/javascript"></script>
<script>
    var Object_type = @Html.Raw(ViewBag.Types);
    var Obj_Collection = @Html.Raw(ViewBag.Objects);
</script>
<div class="row s-dash-container">
    <div class="pd-0 tdasboard-sidebar">
        <div class="t-container">
            <ul class="list-group menuwrapper_ul_outer">
                <li class="list-group-item outer_li">Solutions<i class="fa fa-chevron-right tdash-icon pull-right"></i></li>
                <li class="list-group-item outer_li">Billing<i class="fa fa-chevron-right tdash-icon pull-right"></i></li>
                <li class="list-group-item outer_li">Support<i class="fa fa-chevron-right tdash-icon pull-right"></i></li>
            </ul>
        </div>
    </div>
    @{
        var appinfo = ViewBag.AppInfo;
        var apptype = (EbApplicationTypes)appinfo.AppType;
        string desc = String.IsNullOrEmpty(appinfo.Description) ? "No Description" : appinfo.Description;
        string typeIcon = null;

        if (appinfo.AppType == 1) { typeIcon = "/images/svg/grid-world.svg"; }

        else if(appinfo.AppType == 2) { typeIcon = "/images/svg/smartphone-call.svg"; }

        else if (appinfo.AppType == 3) { typeIcon = "/images/svg/chat1.svg"; }

        }
    <div class="s-dash-workplace">
        <div class="col-md-12 pd-0 s-dash-solution-desc" style="margin-bottom:5px;">
            <div class="col-md-10" style="padding-left: 3px;">
                <h3 class="mr-t-0"><span class="@appinfo.Icon appicon_style"></span> @appinfo.Name </h3>
                <p>@desc</p>
                <p class="small"><img class="apptype_icon" src="@typeIcon"/><span>@apptype</span> Application</p>
            </div>
            <div class="col-md-2 pd-0">
                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        New Object <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" id="object_types_drd">
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-12 pd-0 s-dash-workplace-tabs">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item active">
                    <a class="nav-link" data-toggle="tab" href="#home" role="tab">General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#Objects" role="tab">Objects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#Surveys" role="tab">Surveys</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#Appearance" role="tab">Appearance</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="home" role="tabpanel">

                </div>
                <div class="tab-pane appdash_obj_container" id="Objects" role="tabpanel">
                    <div class="not-found" style="margin-top: 150px;">No Objects...</div>
                </div>
                <div class="tab-pane" id="Surveys" role="tabpanel">

                </div>
                <div class="tab-pane" id="Appearance" role="tabpanel">

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var adash = new AppDashWeb(Object_type, Obj_Collection);
</script>
