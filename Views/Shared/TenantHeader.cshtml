@using System.Web;

@{
    string Logourl = "/static/logo/logo_" + ViewBag.cid + ".png";
    string DpUrl = "/static/dp/dp_" + ViewBag.UId + ".png";
}
<div class="row">
    <div class="toolbar objectDashB-toolbar">
        <div class="col-md-5 pd-0">
            <div class="solution_logo_cont pull-left" style="margin-left:10px;">
                <img src="~/images/EB_Logo.png" class="solution_logo" />
            </div>
            <div class="brd_cr_t EbHeadTitle">
                <div class="brd_row">
                    <span class="eb_context"><a href="/MySolutions"><i class="fa fa-home"></i></a></span>
                    @Html.Raw(HttpUtility.HtmlDecode(ViewBag.BreadCrumb))
                </div>
                <div class="mr-0 Obj_title" id="objname">@ViewBag.ObjName</div>
            </div>
        </div>
        <div class="col-md-7 pd-0 comon_header_dy">
            <div class='toolicons form-inline pull-right'>
                <div id="obj_icons" style="display:inline"></div>
                <div class='form-group'>
                    <button class="btn notification_menu" style="display:none;">
                        <i class="fa fa-bell" alt="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"></i>
                    </button>
                    <div class="dropdown obj_dash_proimage_drp">
                        <img src="~/images/proimg.jpg" data-src=@DpUrl data-toggle="dropdown" class="obj_dash_proimage dropdown-toggle Eb_Image img-circle" />
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <ul class="drp_ul">
                                <li class="drp_item border_b" style="height:50px;">
                                    <img src="~/images/proimg.jpg" data-src=@DpUrl class="proimage_inner Eb_Image" />
                                    <div class="user_info">
                                        <h4>@ViewBag.UserDisplayName</h4>
                                        <p>@ViewBag.email</p>
                                    </div>
                                </li>
                                <li class="drp_item border_b"><a onclick="LoadMyProfile()"><i class="fa fa-user" aria-hidden="true"></i>My Profile</a></li>
                                <li class="drp_item"><a href="@Url.Action("Logout","Tenantuser")"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="eb_common_loader" id="eb_common_loader"></div>
    </div>
</div>
<script>
    var MenuBarCommon = new EbHeader();
    function LoadMyProfile() {
        event.preventDefault();
        //window.open("../Security/ManageUser?itemid=" + $("#hiddenTxtUserId").val(), "_blank");
        var _form = document.createElement("form");
        _form.setAttribute("method", "post");
        _form.setAttribute("action", "../Security/ManageUser");
        _form.setAttribute("target", "_blank");
        var input = document.createElement('input');
        input.type = 'hidden'; input.name = "itemid"; input.value = "-1";
        _form.appendChild(input);
        var mode = document.createElement('input');
        mode.type = 'hidden'; mode.name = "Mode";
        mode.value = '3'; _form.appendChild(mode);
        document.body.appendChild(_form);
        _form.submit();
        document.body.removeChild(_form);
    }

</script>