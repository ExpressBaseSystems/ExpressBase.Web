@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<head>
    <script src="~/js/Pswrd.js"></script>
    <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script>
     
        function onSubmit(token) {
            document.getElementById("signup_form").submit();
        }


        function signup() {
            $('#signup_form').submit();
            $('[class=tLb]').remove();
        }
    </script>
    @if (ViewBag.CaptchaMessage != null)
    {
        <script type="text/javascript">
                            window.onload = function () {
                                alert("@ViewBag.CaptchaMessage");
                            };
        </script>
    }

    <link rel="stylesheet" href="~/css/Pwd.css" />
</head>
<body>

    @using (Html.BeginForm(FormMethod.Post, new { enctype = "application/x-www-form-urlencoded", id = "signup_form" }))
    {

        <div align="center" style="margin-left:850px;margin-top:250px;height:300px">
            <table>
                <tr>
                    <td>
                        <div class="tdd">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                <input class="form-control" type="text" id="email" name="email" placeholder="Email address" />
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="tdd">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <input class="form-control" type="password" id="password" name="password" placeholder="Password">
                            </div>
                        </div>
                    </td>
                    <td><span id="result"></span></td>
                </tr>
                <tr>
                    <td>
                        <div class="tdd">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input class="form-control" type="text" id="fullname" name="fullname" placeholder="Full Name" />
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">

                            <button class="btn btn-lg btn-primary btn-block g-recaptcha" data-sitekey="6Lf3UxwUAAAAAB0HCyxQ73nfpKc7xIET8Ww1nb8x" data-callback='onSubmit' type="submit"><i class="fa fa-sign-in fa-fw"></i>Sign up</button>
                        </div>

                        @*<a href='#' class="fa fa-facebook-official fa-2x" onclick="loginByFacebook()"></a>

                        <div id="gConnect">
                            <button class="g-signin" style="max-width:34px!important"
                                    data-scope="https://www.googleapis.com/auth/plus.me  https://www.googleapis.com/auth/userinfo.profile https://www.googleapis.com/auth/userinfo.email"
                                    data-requestvisibleactions="http://schemas.google.com/AddActivity"
                                    data-clientid="203268368132-jq8l4abn5aefnurqjigj331uanrpei6h.apps.googleusercontent.com"
                                    data-accesstype="offline"
                                    data-callback="onSignInCallback"
                                    data-theme="dark"
                                    data-cookiepolicy="single_host_origin"></button>
                        </div>*@
                    </td>
                </tr>
            </table>
  
        </div>
        <style>
            .tdd {
                margin: 10px;
            }

            input[type="text"] {
                display: block;
                margin: 0;
                width: 102%;
                font-family: sans-serif;
                font-size: 18px;
                box-shadow: none;
                border-radius: none;
            }

                input[type="text"]:focus {
                    outline: none;
                }

            input[type="password"] {
                display: block;
                margin: 0;
                width: 102%;
                font-family: sans-serif;
                font-size: 18px;
                box-shadow: none;
                border-radius: none;
            }

            input[type="text"]:focus {
                outline: none;
            }

            input[type="submit"] {
                background-color: #4C50AF; /* blue */
                border: none;
                color: white;
                padding: 8px 42px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

                input[type="submit"]:hover {
                    background-color: #337; /* blue */
                }
            /*body {
                    background-image: url("http://localhost:53125/images/bgm1.jpg");
                    background-color: #cccccc;
                  }*/
        </style>
    }
</body>