</style>


<script>
    $(function () {
        var i = 2;
        var wd = 0;
        $("#min").click(function (e) {
            e.preventDefault();
            $('#side-div').toggleClass("toggled");
            if ($('#side-div').hasClass("toggled")) {
                $('div[id^="main-box"]').removeClass('col-md-8').addClass('col-md-10');
                $('#min').css('margin-right', '-25px').addClass("rotated");
            }
            else {
                $('div[id^="main-box"]').removeClass('col-md-10').addClass('col-md-8');
                $('#min').css('margin-right', '0').removeClass("rotated");
            }
        });
        $("#pg-min").click(function (e) {
            e.preventDefault();
            $('#p-grid').toggleClass("pg-toggled");
            if ($('#p-grid').hasClass("pg-toggled")) {
                $('div[id^="main-box"]').removeClass('col-md-8').addClass('col-md-10');
                $('#pg-min').css('margin-left', '-25px').addClass("rotated");
            }
            else {
                $('div[id^="main-box"]').removeClass('col-md-10').addClass('col-md-8');
                $('#pg-min').css('margin-left', '0').removeClass("rotated");
            }
        });
        $('#new').click(function () {
            $('#main-box').prepend("<div class='sub-windows' id='sub" + i++ + "'><div class='sub-windows-head'><div class='pull-right' style='margin-top: 3px;'><button class='head-btn'><i class='fa fa-minus' aria-hidden='true'></i></button><button class='head-btn'><i class='fa fa-thumb-tack' aria-hidden='true'></i></button><button class='head-btn'><i class='fa fa-times' aria-hidden='true'></i></button></div></div></div>");
            $('#main-box').scrollLeft(wd);
            wd = wd + 565;
        });
    });

</script>








