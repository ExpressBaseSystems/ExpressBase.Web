
@{
    @using Newtonsoft.Json
}
<style>
    .view_code {
        color: white;
        border: none;
    }
    /*.ViewCode_btn {
           width: 29px;
           height: 32px;
           padding: 4px;
           cursor: pointer;
       }*/
    .prof_dp {
        width: 40px;
        margin-right: 15px;
    }

    .version_table {
        background-color: white;
    }

    .table_container {
        margin-top: 55px;
        padding-right: 10px;
        padding-left: 10px;
    }
</style>
<div class="table_container container">
    <table class='table table-hover table-responsive table-bordered version_table' id='versions_@(ViewBag.tabNum)'>
        <thead class='verthead_@(ViewBag.tabNum)'>
            <tr>
                <th class='col-md-1 text-center'>Version</th>
                <th class='col-md-4 text-center'>Change Log</th>
                <th class='col-md-2 text-center'>Committed By</th>
            </tr>
        </thead>
        <tbody id='vertbody_@(ViewBag.tabNum)' class='vertbody'>
            @{
                var i = 0;
                foreach (var obj in ViewBag.versions)
                {
                    i++;
                    <tr>
                        <td>@obj.VersionNumber</td>
                        <td>@obj.ChangeLog</td>
                        <td>
                            <div class="col-md-2">
                                
                                <img src="../images/dp/@(obj.CommitUId).png" class="img-thumbnail img-circle prof_dp" />
                            </div>
                            <div class="col-md-7">
                                <span class="col-md-12">@obj.CommitUname</span>
                                <span class="col-md-12">@obj.CommitTs</span>
                            </div>
                            <div class="view_code ViewCode_btn pull-right btn-primary btn btn-sm" id='view_code_@(ViewBag.tabNum)_@(i)' value='View' data-id="@obj.RefId" data-verNum="@obj.VersionNumber" data-changeLog="@obj.ChangeLog" data-commitUname="@obj.CommitUname" data-commitTs="@obj.CommitTs">
                                open
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>
    $('#save').hide();
    $('#commit_outer').hide();
    $('#create_button').hide();
    $('#compare').show();
    $('#status').show();
    $('#ver_his').show();
    $("#obj_icons").hide();
</script>

