@{
    var bApnd = true;
    if (ViewBag.Env == "Development")
    {
        bApnd = false;
    }
    Layout = "~/Views/Shared/LayoutInner.cshtml";
}
<link href="~/css/LeadManagement.css" rel="stylesheet" asp-append-version=@bApnd />
<link rel="stylesheet" type="text/css" href="~/css/jquery.datetimepicker.css" asp-append-version=@bApnd />
<script type="text/javascript" src="~/js/jquery.datetimepicker.min.js" asp-append-version=@bApnd></script>
<script type="text/javascript" src="~/js/LeadManagement.js" asp-append-version=@bApnd></script>

<div class="row">
    <div class="lm-form-body">
        <div class="row form-cont" style="margin: 0px;">
            <div class="col-md-8">
                <div class="lm-form-inline">
                    <div class="col-md-10">
                        <div class="lm-form-inline">
                            <div class="lm-form-sec-heading">
                                Basic Details
                            </div>
                        </div>
                        <div class="lm-form-inline">
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Cost Center</label>
                                    <select id="selCostCenter" class="form-control">
                                        <option value="0">HOC Kochi</option>
                                        <option value="1">HOC Kozikode</option>
                                        <option value="2">HOC Trivandrum</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>EN Date</label>
                                    <div class="input-group">
                                        <input id="txtEnDate" type="text" class="form-control">
                                        <span class="input-group-addon" onclick="$('#txtEnDate').focusin();"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Mobile</label>
                                    <input id="txtMobile" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>ID</label>
                                    <input id="txtId" type="text" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="lm-form-inline">
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Name</label>
                                    <input id="txtName" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>DOB</label>
                                    <div class="input-group">
                                        <input id="txtDob" type="text" class="form-control">
                                        <span class="input-group-addon" onclick="$('#txtDob').focusin();"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Age</label>
                                    <input id="txtAge" type="number" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Sex</label>
                                    <select id="selSex" class="form-control">
                                        <option>Male</option>
                                        <option>Female</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="lm-form-inline">
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Phone</label>
                                    <input id="txtPhone" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Profession</label>
                                    <input id="txtProfession" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>Email</label>
                                    <input id="txtEmail" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="lm-form-group">
                                    <label>NRI</label>
                                    <select id="selNri" class="form-control">
                                        <option value="0">No</option>
                                        <option value="1">Yes</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 lm-img-cont">
                    </div>
                </div>
                <div class="lm-form-inline lm-bottom-form">
                    <div class="col-md-6 ">
                        <div class="lm-form-sec-heading">
                            Current Location Details
                        </div>
                        <div class="lm-form-inline">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>City</label>
                                    <input id="txtCrntCity" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Country</label>
                                    <input id="txtCrntCountry" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="lm-form-inline">
                            <div class="lm-form-sec-heading">
                                Home Town Details
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>City</label>
                                    <input id="txtHomeCity" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>District</label>
                                    <input id="txtHomeDistrict" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" style="border-left: 1px solid #ccc;">
                        <div class="lm-form-inline">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Service</label>
                                    <input id="txtService" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Lead Owner</label>
                                    <input id="txtLeadOwner" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="lm-form-inline">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Source Category</label>
                                    <input id="txtSourceCategory" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Sub Category</label>
                                    <input id="txtSubCategory" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="lm-form-inline">
                            <div class="col-md-6">
                                <label>Consultation</label>
                                <select id="selConsultation" class="form-control">
                                    <option value="No">No</option>
                                    <option value="Yes">Yes</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label>Pictures Recevied</label>
                                <select id="selPicReceived" class="form-control">
                                    <option value="No">No</option>
                                    <option value="Yes">Yes</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="lm-form-sec-heading">
                        Followup Details
                    </div>
                    <div class="lm-form-inline">
                        <div class="col-md-6">
                            <div class="lm-form-inline">
                                <div class="col-md-6">
                                    <div class="lm-form-group">
                                        <label>Date</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="lm-form-inline">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Lead Status</label>
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="lm-form-group">
                                        <label>Follow up Date</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="lm-form-group">
                                <label>Comment</label>
                                <textarea class="form-control" style="height: 80px !important; resize:none;"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="border-left: 1px solid #cfced0; height : calc(100vh - 65px);">
                <div class="lm-form-sec-heading">
                    Graft Details
                </div>
                <div class="lm-form-inline">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>No of Grafts</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Total Rate</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>No of PRP</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Consulted Date</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fee Paid</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Consulting Doctor</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Probable Month</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Closing</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nature of Patient</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@{
    @using Newtonsoft.Json;
    var CInfo = Html.Raw(JsonConvert.SerializeObject(ViewBag.CustomerData));
    var CenterInfo = Html.Raw(JsonConvert.SerializeObject(ViewBag.CostCenter));    
}

<script>
    var leadObject = new LeadManagementObj(@ViewBag.MC_Mode, @CInfo, @CenterInfo);
</script>