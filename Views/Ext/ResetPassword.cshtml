    $(document).ready(function () {
        console.log("here it is");
        var boarding = new PasswordValidation();
    });
    $("#AppIcon").iconpicker({ placement: 'top', iconset: 'fontawesome', icon: 'fa-home' }).on('change', function (e) { $("input[name='AppIcon']").val(e.icon); });




