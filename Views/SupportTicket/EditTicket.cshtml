@using ExpressBase.Objects.ServiceStack_Artifacts;


<link rel="stylesheet" href="~/css/SupportTicket/SupportTicket.css">
<script src="~/js/SupportTicket/SupportTicketjs.js" type="text/javascript"></script>



<div class="row s-dash-container h-100">
    <div class="s-dash-workplace tenant_workpane">
        <div class="col-md-12 col-lg-12 col-sm-12 s-dash-solution-desc">
            <div class="col-md-7 col-lg-7 col-xs-12 col-sm-6 pd-0">
                <h4 class="mr-t-0 mr-b-0">Support Ticket</h4>
            </div>
            <div class="col-md-5 col-lg-5 col-sm-6 col-xs-12 pd-0 s-dash-btnwraper">

            </div>
        </div>
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 pd-0 s-dash-workplace-tabs">
            <div class="tdash-box-body">
                <div class="edtsprt w-100">
                    <div class="row  pd_lft30 w-100 ">
                        <div class="col-sm-12 col-md-7 col-lg-7 bdr">
                            <div class="row">
                                <div class="col-sm-3 col-md-3 col-lg-3 shd recdiv">
                                    <label>Ticket Id</label>
                                    <div class=" ">
                                        <span class="" id="tktid"> </span>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-sm-6 col-md-6 col-lg-6 ">
                                    <label>Title</label>
                                    <div class=" ">
                                        <input class="form-control w-100 " type="text" id="bugtitle">
                                    </div>
                                    <div id="titlelbl" class="" style=" visibility :hidden"> Enter a title</div>
                                </div>
                                <div class="col-sm-6 col-md-6 col-lg-6 ">
                                    <label>Solution Id</label>
                                    <div class=" ">
                                        <input class="form-control w-100 " type="text" id="soluid" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 col-md-4 col-lg-4 ">
                                    <label>Priority</label>
                                    <div>
                                        <select id="bugpriority" class="form-control  priori w-100">
                                            <option value="1">High</option>
                                            <option value="2">Mid</option>
                                            <option value="3">Low</option>
                                        </select>
                                    </div>
                                    <div id="prioritylbl" class="" style=" visibility :hidden">Select a value</div>
                                </div>
                                <div class="col-sm-4 col-md-4 col-lg-4 ">
                                    <label>Issue type</label>
                                    <div class=" ">
                                        <input class="form-control w-100 " type="text" id="type_b_f" disabled>
                                    </div>
                                </div>
                                <div class="col-sm-4 col-md-4 col-lg-4 ">
                                    <label>Status</label>
                                    <div class=" ">
                                        <input class="form-control w-100 " type="text" id="stsid" disabled>
                                    </div>
                                    <div id="stsidlbl" class="" style=" visibility :hidden"> status</div>
                                </div>

                            </div>
                            
                            <div class="row">
                                <div class="col-sm-12 col-md-4 col-lg-4 ">
                                    <label>Date Created</label>
                                    <div class=" ">
                                        <input class="form-control w-100 " type="text" id="dtecrtd" disabled>
                                    </div>
                                    <div id="dtecrtdlbl" class="" style=" visibility :hidden"> Date Created</div>
                                </div>
                                <div class="col-sm-12 col-md-4 col-lg-4 ">
                                    <div>
                                        <label>Date Modified</label>
                                        <div class=" ">
                                            <input class="form-control w-100 " type="text" id="dtemdfyd" disabled>
                                        </div>
                                        <div id="dtemdfydlbl" class="" style=" visibility :hidden">Date Modified </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 col-lg-4 ">
                                    <label>Assigned to</label>
                                    <div class=" ">
                                        <input class="form-control w-100 " type="text" id="asgnid" disabled>
                                    </div>
                                    <div id="asgnidlbl" class="" style=" visibility :hidden"> assign</div>
                                </div>

                            </div>
                            <div class="row ">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <label>Description</label>
                                    <div>
                                        <textarea rows="8" cols="50" class="form-control stprsiz" id="descriptionid"></textarea>
                                    </div>
                                    <div id="descrlbl" class="" style=" visibility :hidden"> Enter some description</div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <button id="btnupdate" class="btn btn-primary" type="button"> Update</button>
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-12 col-md-5 col-lg-5 pdtop20">

                            <div>
                                <div class="input-field">
                                    <label class="active">Files</label>
                                    <div class="input-images-2" style="padding-top: .5rem; max-height:250px;overflow-y:auto;"></div>
                                </div>

                            </div>
                            <div class="pdtop20">
                                <label>Remarks</label>
                                <div>
                                    <textarea rows="10" cols="50" class="form-control stprsiz" id="remarkid" disabled></textarea>
                                </div>
                            </div>

                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
      $(document).ready(function () {
          tktdtl = @Html.Raw(ViewBag.tktdetails);
          var edt = new EditTicket();
          let preloaded = [];
          
          for (var i = 0; i < tktdtl.supporttkt.length; i++) {

              for (var j = 0; j < tktdtl.supporttkt[i].Fileuploadlst.length; j++) {

                  var item = tktdtl.supporttkt[i].Fileuploadlst[j].FileDataURL;
                  var fileno =tktdtl.supporttkt[i].Fileuploadlst[j].FileId;
                  preloaded.push({ id: "photo", src: item, fileno:fileno });
              }
          }

        $('.input-images-2').imageUploader({
            preloaded: preloaded,
            imagesInputName: 'photos',
            preloadedInputName: 'old'
        });


    });
</script>