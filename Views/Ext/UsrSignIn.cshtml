@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    Html.RenderPartial("ExtPageHeader2");
}

<script>
    $(document).ready(function () {
        $('#prof').hide();
        $('.noti').hide();
        $('#submen').hide();
        if ($('#err').val() != '') {
            $('#errdiv').show();

        }
    });
   
    function onSubmit(token) {
            document.getElementById("log_form").submit();
        }
</script>

<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-box-body">
                    <div id="errdiv" class="alert alert-danger" style="display:none">
                        @ViewBag.errMsg
                    </div>
                    <input type="hidden" id="err" value="@ViewBag.errMsg" />
                    <div class="login-box-msg">
                        <img id="profile-img" class="img-responsive img-cir" src="~/images/proimg.jpg" />
                        <p id="profile-name" class="profile-name-card"></p>
                    </div>
                    <div class="form-group ">
                        <form id="log_form" class="form-signin" action="~/Ext/TenantSignin" method="post">
                            <span id="reauth-email" class="reauth-email"></span>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input type="text" id="uname" name="uname" class="form-control" placeholder="Username/Email" required autofocus><br />
                            </div><br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <input type="password" id="pass" name="pass" class="form-control" placeholder="Password" required>
                            </div>
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox" id="loginrem"> Remember Me
                                </label>
                                <div class="text-right nopadding">
                                    <a href="#">Forgot password?</a>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-block btn-flat g-recaptcha" data-sitekey="6LcQuxgUAAAAAKHLgQZU6TcadxgZhcKBEUWaEZeV" data-callback='onSubmit' style="background-color:#3b5998;color:white;">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>