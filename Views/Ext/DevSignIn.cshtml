@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    Html.RenderPartial("ExtPageHeader2");
}
<script>
    $(document).ready(function () {
        $('#prof').hide();
        $('.noti').hide();
        $('#submen').hide();
        if ($('#err').val() != '') {
            $('#errdiv').show();

        }
    });
   
    function onSubmit(token) {
            document.getElementById("log_form").submit();
        }
</script>
<section id="login">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8" style="padding:0;height:100%;margin-top: 30px;background-color:#343434">
                <img src="~/images/signin (2).jpeg" class="img-responsive"/>
            </div>
            <div class="col-md-4">
                <br />
                <br />
                <div class="login-box-body">
                    <div id="errdiv" class="alert alert-danger" style="display:none">
                        @ViewBag.errMsg
                    </div>
                    <input type="hidden" id="err" value="@ViewBag.errMsg" />
                    <div class="login-box-msg">
                        <img id="profile-img" class="img-responsive img-cir" src="~/images/proimg.jpg" />
                        <p id="profile-name" class="profile-name-card"></p>
                    </div>
                    <div class="form-group ">
                        <form id="log_form" class="form-signin" action="~/Ext/TenantSignin" method="post">
                            <span id="reauth-email" class="reauth-email"></span>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input type="text" id="uname" name="uname" class="form-control" placeholder="Username/Email" required autofocus><br />
                            </div><br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <input type="password" id="pass" name="pass" class="form-control" placeholder="Password" required>
                            </div>
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox" id="loginrem"> Remember Me
                                </label>
                                <div class="text-right nopadding">
                                    <a href="#">Forgot password?</a>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-block btn-flat g-recaptcha" data-sitekey="6LcQuxgUAAAAAKHLgQZU6TcadxgZhcKBEUWaEZeV" data-callback='onSubmit' style="background-color:#3b5998;color:white;">Sign In</button>
                            <input type="hidden" name="console" value="dc" />
                        </form>
                        <div class="row">
                            <hr class="bottom-line">
                            <div class="text-center">Or Sign In by</div>
                            <div style="padding-left: 34px;">
                                <div class="col-xs-2 col-sm-2">
                                    <a href="@ViewBag.ServiceUrl/auth/facebook" class="btn btn-lg btn-block">
                                        <i class="fa fa-facebook fa-lg"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                                <div class="col-xs-2 col-sm-2">
                                    <a href="#" class="btn btn-lg btn-block">
                                        <i class="fa fa-twitter fa-lg text-info"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                                <div class="col-xs-2 col-sm-2">
                                    <a href="#" class="btn btn-lg btn-block">
                                        <i class="fa fa-google-plus fa-lg text-danger"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                                <div class="col-xs-2 col-sm-2">
                                    <a href="#" class="btn btn-lg btn-block">
                                        <i class="fa fa-linkedin fa-lg"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                                <div class="col-xs-2 col-sm-2">
                                    <a href="#" class="btn btn-lg btn-block">
                                        <i class="fa fa-github fa-lg text-muted"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>