@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<head>
    <script src="~/js/Pswrd.js"></script>
    <script src="~/js/thirdpartysignup.js"></script>
    <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>
    <script>function signup() {
    $('#signup_form').submit();
    $('[class=tLb]').remove();
}</script>
    <link rel="stylesheet" href="~/css/Pwd.css" />
</head>
<body>

    @using (Html.BeginForm(FormMethod.Post, new { enctype = "application/x-www-form-urlencoded", id = "signup_form"}))
    {
       
        <div align="center" style="margin-left:750px;margin-top:300px;height:400px">
            <table>
                <tr>
                    <td><div class="tdd">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                    <input class="form-control" type="text" id="email" name="email" placeholder="Email address" />   
                            </div>
                        </div></td>
                </tr>
                <tr>
                    <td><div class="tdd">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <input class="form-control" type="password" id="password" name="password" placeholder="Password">
                            </div>
                        </div></td>
                    <td><span id="result"></span></td>
                </tr>
                <tr>
                    <td><div class="tdd">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input class="form-control" type="text" id="fullname" name="fullname" placeholder="Full Name" />
                            </div>
                        </div></td>
                </tr>
                <tr>
                    <td><div class="input-group">
    @*<span class="input-group-addon"><i class="fa fa-sign-in fa-fw"></i></span>*@
    @*<input type="submit" class="form-control" value="Login" />*@
    <a class="btn btn-primary" href="javascript: signup();">
        <i class="fa fa-sign-in fa-lg"></i> Sign up
    </a>
</div>
                    @* <td><div><input type="button" value="facebook" onclick="loginByFacebook()" /></div></td>*@
                <a href='#' class="fa fa-facebook-official fa-2x" onclick="loginByFacebook()"></a>
                    
                    <div id="gConnect" >
                        <button class="g-signin" style="max-width:34px!important"
                                data-scope="https://www.googleapis.com/auth/plus.me  https://www.googleapis.com/auth/userinfo.profile"
                                data-requestvisibleactions="http://schemas.google.com/AddActivity"
                                data-clientid="873705187391-crnqrfqklcdqn5qnc8fqmrjn33hsnkvi.apps.googleusercontent.com"
                                data-accesstype="offline"
                                data-callback="onSignInCallback"
                                data-theme="dark"
                                data-cookiepolicy="single_host_origin"></button>
                    </div>
                       
                    </td>
                </tr>
            </table>
        </div>
            <style>
                .tdd {
                    margin: 10px;
                }

                input[type="text"] {
                    display: block;
                    margin: 0;
                    width: 102%;
                    font-family: sans-serif;
                    font-size: 18px;
                    box-shadow: none;
                    border-radius: none;
                }

                    input[type="text"]:focus {
                        outline: none;
                    }

                input[type="password"] {
                    display: block;
                    margin: 0;
                    width: 102%;
                    font-family: sans-serif;
                    font-size: 18px;
                    box-shadow: none;
                    border-radius: none;
                }

                input[type="text"]:focus {
                    outline: none;
                }

                input[type="submit"] {
                    background-color: #4C50AF; /* blue */
                    border: none;
                    color: white;
                    padding: 8px 42px;
                    text-align: center;
                    text-decoration: none;
                    display: inline-block;
                    font-size: 16px;
                }

                    input[type="submit"]:hover {
                        background-color: #337; /* blue */
                    }
             /*body {
                    background-image: url("http://localhost:53125/images/bgm1.jpg");
                    background-color: #cccccc;
                  }*/
            </style>
    }
</body>